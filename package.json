{
  "name": "collabcanvas",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "./scripts/autostart-checkpoint.sh && next dev",
    "dev:clean": "rm -rf .next node_modules/.cache && next dev",
    "build": "next build",
    "postbuild": "echo 'Skipping visual verification in Vercel build (Playwright not available)'",
    "start": "next start",
    "lint": "eslint",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test && npx tsx scripts/capture_evidence.ts",
    "test:ai": "vitest run tests/e2e/ai-agent --run",
    "mcp:playwright": "tsx scripts/mcp_playwright_stub.ts",
    "capture:build": "tsx scripts/visual_capture.ts build",
    "capture:debug": "tsx scripts/visual_capture.ts debug",
    "capture:fix": "tsx scripts/visual_capture.ts fix",
    "capture:visual": "tsx tools/visual-verification-core/src/capture.ts",
    "verify:visual": "tsx tools/visual-verification-core/src/verify_visual.ts",
    "visual:loop": "tsx scripts/visual_loop.ts",
    "evolvr:loop": "tsx tools/evolvr-core/loop.ts",
    "surgical:loop": "pnpm -s visual:loop",
    "fix:surgical": "tsx scripts/surgical_fix.ts"
  },
  "dependencies": {
    "@sentry/nextjs": "^10.19.0",
    "@t3-oss/env-nextjs": "^0.13.8",
    "axios": "^1.12.2",
    "clsx": "^2.1.1",
    "firebase": "^12.4.0",
    "framer-motion": "^12.23.22",
    "konva": "^10.0.2",
    "langchain": "^0.3.36",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.544.0",
    "next": "15.5.4",
    "openai": "^6.1.0",
    "pixelmatch": "^6.0.0",
    "pngjs": "^7.0.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-konva": "^19.0.10",
    "recharts": "^3.2.1",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.11",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.56.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.0.4",
    "dotenv": "^17.2.3",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "jsdom": "^27.0.0",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "puppeteer": "^24.25.0",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
